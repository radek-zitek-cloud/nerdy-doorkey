# Nerdy Doorkey Configuration File
# Copy this file to ~/.nedok.toml to customize settings

# ============================================================================
# COLOR CONFIGURATION
# ============================================================================
# You can customize which colors are used for different file types and git statuses
#
# Available color keywords for file_mode and git_mode:
#   blue_bold    - Bold blue (default for directories)
#   green_bold   - Bold green (default for executables and staged files)
#   cyan         - Cyan (default for symlinks and renamed files)
#   gray_dim     - Dimmed gray (default for hidden files and clean git files)
#   yellow       - Yellow (default for readonly and modified unstaged files)
#   white        - White (default for regular files)
#   red_bold     - Bold red (default for untracked files)
#   red          - Red (default for deleted files)
#
# Available color keywords for dialog popups (foreground/background):
#   black        - Black
#   red          - Red
#   green        - Green
#   yellow       - Yellow
#   blue         - Blue
#   magenta      - Magenta
#   cyan         - Cyan
#   white        - White
#   default      - Terminal default color
# ============================================================================

[colors.file_mode]
directory = "blue_bold"       # Directories
executable = "green_bold"     # Executable files (files with x permission)
symlink = "cyan"              # Symbolic links
hidden = "gray_dim"           # Hidden files (starting with .)
readonly = "yellow"           # Read-only files (no write permission)
regular = "white"             # Regular files with write permission

[colors.git_mode]
untracked = "red_bold"        # Untracked files (??)
deleted = "red"               # Deleted files (D)
modified_unstaged = "yellow"  # Modified but not staged ( M)
staged = "green_bold"         # Staged files (M , A )
renamed = "cyan"              # Renamed files (R )
clean = "gray_dim"            # Clean files (tracked, no changes)
directory = "blue_bold"       # Directories (always blue in git mode)

[colors.dialog]
# Configure confirmation popup colors (foreground/background)
# Use simple color names (not _bold or _dim variants)
# See color keyword list above for available values
foreground = "black"
background = "cyan"

# SSH Credentials
# ⚠️  SECURITY WARNING: Passwords are stored in PLAINTEXT - NOT SECURE!
#
# RECOMMENDED: Use SSH agent with key-based authentication instead:
#   1. Generate SSH key: ssh-keygen -t rsa -b 4096
#   2. Copy to server: ssh-copy-id user@host
#   3. Start SSH agent: eval "$(ssh-agent -s)"
#   4. Add key: ssh-add ~/.ssh/id_rsa
#   5. Connect without password!
#
# This section is auto-populated when you save credentials after connecting
# Best practice: Only save username, leave password empty, use SSH agent
[ssh.credentials]
# Format:
# [ssh.credentials."hostname.example.com"]
# username = "myuser"
# password = "mypassword"  # ⚠️  PLAINTEXT - not secure!

# Example (username only - secure):
# [ssh.credentials."server.local"]
# username = "admin"
# # No password - will use SSH agent keys

# Session State
# Automatically saved when you exit the browser
# Restored when you launch without specifying directories
# SSH connections are also saved and auto-reconnected if possible
[session]
left_directory = "."
right_directory = "."

# SSH connection states (auto-populated)
# left_ssh and right_ssh are saved when you exit with remote connections active
# [session.left_ssh]
# hostname = "server.example.com"
# username = "myuser"
# remote_directory = "/home/myuser/projects"

# [session.right_ssh]
